generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  hash       String
  groups     Group[]
  JoinsGroup JoinsGroup[]
}

model Group {
  id          Int          @id @default(autoincrement())
  name        String
  subject     String
  location    String
  notes       String?
  time        DateTime
  maxUsers    Int?
  admin       User         @relation(fields: [adminId], references: [id])
  adminId     Int
  joinsGroups JoinsGroup[]
}

model JoinsGroup {
  user    User  @relation(fields: [userId], references: [id])
  group   Group @relation(fields: [groupId], references: [id])
  userId  Int
  groupId Int

  @@unique([userId, groupId])
}
